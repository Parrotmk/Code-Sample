<?xml version="1.0"?>
<config>
  <modules>
    <PEnquiry_Enquiry>
      <version>0.1.0</version>
    </PEnquiry_Enquiry>
  </modules>
  <frontend>
    <routers>
      <enquiry>
        <use>standard</use>
          <args>
            <module>PEnquiry_Enquiry</module>
            <frontName>activate</frontName>
          </args>
      </enquiry>
    </routers>
		<layout>
		  <updates>
			<enquiry>
			  <file>enquiry.xml</file>
			</enquiry>
		  </updates>
		</layout>
		<translate>
            <modules>
                <PEnquiry_Enquiry>
                    <files>
                        <default>PEnquiry_Enquiry.csv</default>
                    </files>
                </PEnquiry_Enquiry>
            </modules>
        </translate>
  </frontend>
  <global>
    <helpers>
      <enquiry>
        <class>PEnquiry_Enquiry_Helper</class>
      </enquiry>
    </helpers>
	<template>
            <email>
                <comment_template  module="enquiry">
                    <file>comment_template.html</file>
                    <type>html</type>
                </comment_template>
            </email>
        </template>
	<blocks>
	  <enquiry>
		<class>PEnquiry_Enquiry_Block</class>
	  </enquiry>
	</blocks>
	<models>
	  <enquiry>
		<class>PEnquiry_Enquiry_Model</class>
		<resourceModel>enquiry_mysql4</resourceModel>
	  </enquiry>
	  <enquiry_mysql4>
		<class>PEnquiry_Enquiry_Model_Mysql4</class>
		<entities>		  
			  <enquiry>
				<table>enquiry</table>
			  </enquiry>
        </entities>
	  </enquiry_mysql4>
	</models>
	<resources>
	  <enquiry_setup>
		<setup>
		  <module>PEnquiry_Enquiry</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </enquiry_setup>
	  <enquiry_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </enquiry_write>
	  <enquiry_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </enquiry_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <enquiry>
	    <use>admin</use>
		<args>
		  <module>PEnquiry_Enquiry</module>
		  <frontName>enquiry</frontName>
		</args>
	  </enquiry>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <enquiry module="enquiry">
		<title>Activate</title>
		<sort_order>100</sort_order>
		<children>
		  <setting module="enquiry">
					<title>Settings</title>
					<sort_order>4</sort_order>
					<action>adminhtml/system_config/edit/section/enquiries</action>
		</setting>
		  <enquiry module="enquiry">
		    <title>Manage Activate</title>
			<sort_order>0</sort_order>
			<action>enquiry/adminhtml_enquiry</action>
		  </enquiry>
		</children>
	  </enquiry>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<enquiry translate="title" module="enquiry">
			  <title>Enquiry</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <setting module="enquiry">
					<title>Settings</title>
					<sort_order>4</sort_order>
					<action>adminhtml/system_config/edit/section/enquiries</action>
		</setting>
		  
		  <enquiry translate="title">
			<title>Manage Enquiry</title>
			<sort_order>0</sort_order>
		  </enquiry>
			  </children>
			</enquiry>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<enquiry>
		  <file>enquiry.xml</file>
		</enquiry>
	  </updates>
	</layout>
	<translate>
            <modules>
                <PEnquiry_Enquiry>
                    <files>
                        <default>PEnquiry_Enquiry.csv</default>
                    </files>
                </PEnquiry_Enquiry>
            </modules>
    </translate>
  </adminhtml>
</config> 